<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".AddReading">

    <TextView
        android:id="@+id/add_reading_title"
        tools:text="Body Temperature"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_gravity="left"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/add_reading_desc"
        tools:text="Enter the readings from your thermometer after keeping it under the tougue for one minute"
        android:textSize="15sp"
        android:layout_gravity="start"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" />

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Date"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

        <EditText
            android:id="@+id/add_reading_date"
            tools:text="Date"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="end"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Time"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

        <EditText
            android:id="@+id/add_reading_time"
            tools:text="Time"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="end"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <EditText
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#F95A2C"
            android:id="@+id/edit_text_reading"
            android:hint="Enter Reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/add_reading_unit"
            tools:text="Â°F"
            android:layout_margin="4dp"
            android:layout_gravity="bottom"
            android:textSize="15sp"
            android:textColor="#F95A2C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/reading_button"
        android:text="Add Reading"
        android:layout_margin="20dp"
        android:padding="16dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/rounded_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>