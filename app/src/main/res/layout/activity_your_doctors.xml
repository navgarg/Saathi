<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".YourDoctors">

    <TextView
        android:id="@+id/dash"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Your Doctors"
        android:textColor="#000000"
        android:textSize="25sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <ListView
        android:layout_below="@+id/dash"
        android:id="@+id/list_view_your_doc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_doctor_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/add_logo"
        android:layout_marginBottom="80dp"
        android:contentDescription="Add Doctor"
        android:layout_marginRight="32dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_your_doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemTextColor="#000"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        app:menu="@menu/menu_nav_pat" />

</RelativeLayout>
